function modAction(type) {
    let target = prompt("Entrez le nom (ID) de l'utilisateur :");
    
    if (target) {
        if(type === 'ban') {
            alert("‚õî L'ID [" + target + "] a √©t√© bannie d√©finitivement.");
        }
        if(type === 'licence') {
            let nbr = prompt("Combien de pi√®ces voulez-vous donner ?");
            alert("ü™ô " + nbr + " pi√®ces ont √©t√© ajout√©es au compte de " + target);
        }
        if(type === 'badge') {
            alert("‚úÖ Badge Certifi√© activ√© pour " + target);
        }
        if(type === 'annonce_ok') {
            alert("üì¢ L'annonce de " + target + " est maintenant en ligne.");
        }
    }
}
