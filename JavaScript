// G√©n√©rer les 30 slots d'invit√©s au chargement
document.addEventListener('DOMContentLoaded', () => {
    const grid = document.getElementById('guestsGrid');
    for (let i = 1; i <= 30; i++) {
        const slot = document.createElement('div');
        slot.className = 'guest-slot';
        slot.innerHTML = '+';
        slot.onclick = () => inviteMember(i);
        grid.appendChild(slot);
    }
});

// Syst√®me de Tapotage (C≈ìurs)
function sendHeart() {
    const container = document.getElementById('heart-container');
    const heart = document.createElement('div');
    heart.innerHTML = '‚ù§Ô∏è';
    heart.className = 'floating-heart';
    container.appendChild(heart);
    setTimeout(() => heart.remove(), 2000);
}

// Gestion des pi√®ces et commission (Anonymous SOS FR)
function processGift(amountInCoins) {
    const commission = 0.20; // Tu prends 20%
    const adminProfit = amountInCoins * commission;
    const streamerNet = amountInCoins - adminProfit;

    console.log("Profit pour le site : " + adminProfit + " pi√®ces");
    console.log("Cr√©dit pour le streamer : " + streamerNet + " pi√®ces");
}

